@page 
@model BSR.Pages.HomeDetailModel

<h2>Update Home Details</h2>

<form method="post" asp-page-handler="Update">
    <div class="form-group">
        <label asp-for="Home.Price"></label>
        <input asp-for="Home.Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Home.Address"></label>
        <input asp-for="Home.Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Home.Area"></label>
        <input asp-for="Home.Area" class="form-control" />
    </div>
    <input asp-for="Home.Id" type="hidden" />
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<button type="button" onclick="showConfirmation()">Delete</button>

<div id="deleteConfirmation" style="display:none;">
    <p>Are you sure you want to delete this record?</p>
    <button onclick="deleteHome(@Model.Home.Id)" class="btn btn-danger">Confirm Delete</button>
    <button onclick="closeConfirmation()" class="btn btn-secondary">Cancel</button>
</div>

<a asp-page="/Index" class="btn btn-secondary">Back to Home List</a>
