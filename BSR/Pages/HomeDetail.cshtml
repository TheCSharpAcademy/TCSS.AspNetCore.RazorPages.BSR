@page
@model BSR.Pages.HomeDetailModel

<h2>Update Home Details</h2>

<form method="post" asp-page-handler="Update" id="updateHomeForm">
    <div>
        <label asp-for="Home.Price"></label>
        <input asp-for="Home.Price" />
        <span asp-validation-for="Home.Price"></span>
    </div>
    <div>
        <label asp-for="Home.Address"></label>
        <input asp-for="Home.Address"  />
        <span asp-validation-for="Home.Address"></span>
    </div>
    <div>
        <label asp-for="Home.Area"></label>
        <input asp-for="Home.Area" />
        <span asp-validation-for="Home.Area"></span>
    </div>
    <input asp-for="Home.Id" type="hidden" />
    <button type="submit">Save Changes</button>
</form>

<button type="button" onclick="showConfirmation()">Delete</button>

<div id="deleteConfirmation" style="display:none;">
    <p>Are you sure you want to delete this record?</p>
    <button onclick="deleteHome(@Model.Home.Id)">Confirm Delete</button>
    <button onclick="closeConfirmation()">Cancel</button>
</div>

<a asp-page="/Index">Back to Home List</a>
