@page "{id:int}"
@model BSR.Pages.HomeDetailModel

<h2>Update Home Details</h2>

<form method="post" asp-page-handler="Update">
    <div>
        <label for="price">Price:</label>
        <input type="text" id="price" name="Price" value="@Model.Home.Price" />
    </div>
    <div>
        <label for="address">Address:</label>
        <input type="text" id="address" name="Address" value="@Model.Home.Address" />
    </div>
    <div>
        <label for="area">Square Meters:</label>
        <input type="text" id="area" name="Area" value="@Model.Home.Area" />
    </div>

    <button type="submit">Save Changes</button>
</form>

<button type="button" onclick="showConfirmation()">Delete</button>

<div id="deleteConfirmation" style="display:none;">
    <p>Are you sure you want to delete this record?</p>
    <button onclick="deleteHome(@Model.Home.Id)">Confirm Delete</button>
    <button onclick="closeConfirmation()">Cancel</button>
</div>

<a asp-page="/Index">Back to Home List</a>
