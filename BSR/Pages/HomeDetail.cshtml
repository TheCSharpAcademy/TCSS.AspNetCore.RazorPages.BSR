@page "{id:int}"
@model BSR.Pages.HomeDetailModel

<h2>Home Details</h2>

<div>
    <label>Price:</label>
    <span>@Model.Home.Price</span>
</div>
<div>
    <label>Address:</label>
    <span>@Model.Home.Address</span>
</div>
<div>
    <label>Square Meters:</label>
    <span>@Model.Home.Area</span>
</div>

<button type="button" onclick="showConfirmation()">Delete</button>

<div id="deleteConfirmation" style="display:none;">
    <p>Are you sure you want to delete this record?</p>
    <button onclick="deleteHome(@Model.Home.Id)">Confirm Delete</button>
    <button onclick="closeConfirmation()">Cancel</button>
</div>

<a asp-page="/Index">Back to Home List</a>