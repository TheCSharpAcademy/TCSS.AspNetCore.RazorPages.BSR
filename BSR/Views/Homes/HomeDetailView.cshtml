@using BSR
@model Home

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<a class="btn btn-outline-dark mt-3 mb-3" asp-action="Index" asp-controller="Homes">Back to Home List</a>

<h2>Update Home Details</h2>

<form class="pb-3" method="post" asp-action="Update" asp-controller="Homes" id="updateHomeForm">
    <div class="form-group pb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control w-25" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group pb-3">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control w-50" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group pb-3">
        <label asp-for="Area"></label>
        <input asp-for="Area" class="form-control w-25" />
        <span asp-validation-for="Area" class="text-danger"></span>
    </div>
    <input asp-for="Id" type="hidden" />
    <button type="submit" class="btn btn-success">Save Changes</button>
</form>

<button type="button" class="btn btn-danger" onclick="showConfirmation()">Delete</button>

<div id="deleteConfirmation" style="display:none;">
    <p>Are you sure you want to delete this record?</p>
    <button class="btn btn-danger" onclick="deleteHome(@Model.Id)">Confirm Delete</button>
    <button class="btn btn-primary" onclick="closeConfirmation()">Cancel</button>
</div>

